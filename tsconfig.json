{
  "compilerOptions": {
    "charset": "utf-8",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "pretty": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "include": [
    "src/*",
    "typings/**/*"
  ]
}
